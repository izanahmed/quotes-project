<h1>Add Quote</h1>

<%= form_for :quote do |form| %>
  <div class="mb-3">
    <p1 class="m-3">Tag</p1>
    <%= form.text_field :name, class: "form-control", placeholder: "Tag" %>
  </div>
  <div class="mb-3">
    <p1 class="m-3">Add Quote</p1>
    <%= form.text_field :desc, class: "form-control", placeholder: "Insert Quote" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Add Quote", class: "btn btn-primary" %>
  </div>
<% end %>