  <h1>Log in</h1>
  <%= form_with url: login_path do |form| %>
  <% if @user && @user.errors.any? %>
  <div class="alert alert-danger">
   <% @user.errors.full_messages.each do |message| %>
   <div><%= message %></div>
   <% end %>
  </div>
 <% end %>
 <div class="mx-5" id="login">
  <div class="mb-3">
    <p1 class="form-group">Email</p1>
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="mb-3">
    <p1 class="form-group">Password</p1>
    <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
  </div>
  <div class="mb-3">
    <%= form.submit "Log in", class: "btn btn-primary" %>
    <div class="form-group my-2">
      <a href="/signup">Don't have an account?</a>
    </div>
  </div>
</div>
<% end %>